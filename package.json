{
  "name": "crypto-sniper-bot",
  "version": "1.0.0",
  "description": "Cryptocurrency trading, scalping, and sniping bot with automatic trading capabilities",
  "main": "src/main.js",
  "scripts": {
    "setup-desktop": "electron-builder install-app-deps",
    "start-server": "node src/server.js",
    "start-ui": "electron src/electron.js",
    "logs": "node src/scripts/showLogs.js",
    "stop": "node src/scripts/stopBot.js",
    "setup": "node src/scripts/setup.js",
    "start": "npm run start-server && npm run start-ui",
    "build": "electron-builder --win"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "bot",
    "ethereum",
    "binance",
    "crypto.com",
    "scalping",
    "sniping"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@uniswap/sdk": "^3.0.3",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "ccxt": "^3.0.0",
    "chart.js": "^4.2.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "electron-log": "^4.4.8",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "lokijs": "^1.5.12",
    "moment": "^2.29.4",
    "node-binance-api": "^0.13.1",
    "node-schedule": "^2.1.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.2.7",
    "technicalindicators": "^3.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "electron": "^23.2.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.cryptosniperbot.app",
    "productName": "CryptoSniperBot",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CryptoSniperBot"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ]
  }
}
